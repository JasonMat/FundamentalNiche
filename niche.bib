file = {:D\:/Mendeley/ecog.05176.pdf:pdf},
issn = {16000587},
journal = {Ecography},
keywords = {monitoring,spatial management,spatiotemporal modeling,species distribution modeling},
number = {3},
pages = {427--439},
title = {{Improving estimates of species distribution change by incorporating local trends}},
volume = {44},
year = {2021}
}
