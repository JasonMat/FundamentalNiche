file = {:D\:/Mendeley/Monahan, Tingley - 2012 - Niche tracking and rapid establishment of distributional equilibrium in the house sparrow show potential respo.pdf:pdf},
issn = {19326203},
journal = {PLoS ONE},
number = {7},
pmid = {22860062},
title = {{Niche tracking and rapid establishment of distributional equilibrium in the house sparrow show potential responsiveness of species to climate change}},
